<%- include('partials/header'); -%>

<h1>Compose</h1>

<form method="post" action="/compose">
    <div class="form-group" action="/compose" method="post">
        <label>Title</label>
        <input type="title" name="postTitle" class="form-control" />
    </div>
    <div class="form-group">
        <label>Post</label>
        <textarea class="form-control" name="postBody" rows="5"></textarea>
    </div>
    <button type="submit" class="btn btn-primary mb-2">Publish</button>
</form>

